{
  "type": "object",
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "User",
  "description": "A single user",
  "allOf": [
    {
      "properties": {
        "password": {
          "type": "string",
          "title": "password"
        },
        "enabled": {
          "type": "boolean",
          "title": "enabled"
        }
      }
    },
    {
      "properties": {
        "id": {
          "type": "string",
          "title": "id"
        },
        "username": {
          "type": "string",
          "title": "username"
        },
        "firstName": {
          "type": "string",
          "title": "firstName"
        },
        "lastName": {
          "type": "string",
          "title": "lastName"
        },
        "email": {
          "type": "string",
          "title": "email"
        },
        "jobTitle": {
          "type": [
            "string",
            "null"
          ],
          "title": "jobTitle"
        },
        "phoneNumber": {
          "type": [
            "string",
            "null"
          ],
          "title": "phoneNumber"
        },
        "timezone": {
          "type": "string",
          "title": "timezone"
        },
        "homeFacilityId": {
          "type": [
            "string",
            "null"
          ],
          "title": "homeFacilityId"
        },
        "verified": {
          "type": "boolean",
          "title": "verified"
        },
        "active": {
          "type": "boolean",
          "title": "active"
        },
        "loginRestricted": {
          "type": "boolean",
          "title": "loginRestricted"
        },
        "allowNotify": {
          "type": "boolean",
          "title": "allowNotify"
        },
        "roleAssignments": {
          "type": "array",
          "title": "roleAssignments",
          "items": {
            "type": "object",
            "$ref": "roleAssignment.json"
          },
          "uniqueItems": false
        },
        "extraData": {
          "type": "object",
          "title": "extraData"
        }
      },
      "required": [
        "username",
        "firstName",
        "lastName",
        "verified",
        "active",
        "loginRestricted"
      ]
    }
  ]
}
